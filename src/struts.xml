<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" 
	"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	 <package name="com.mystruts.action" extends="struts-default">
		   <action name="search" method="search" class="com.mystruts.action.UserAction">
			 <result name="success">/success.jsp</result>
			 <result name="error">/error.jsp</result>
		   </action>
		   <action name="show" method="show" class="com.mystruts.action.UserAction">
			 <result name="success">/show.jsp</result>
		   </action>
		   <action name="showWriter" method="showWriter" class="com.mystruts.action.UserAction">
			 <result name="success">/showWriter.jsp</result>
		   </action>
		   <action name="delete" method="delete" class="com.mystruts.action.UserAction">
			 <result name="success">/delete.jsp</result>
		   </action>
	</package>
</struts>